<div class="text-center container mt-3">
  <h1>Doctors</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.email %></td>
          <td><%= link_to 'Show', doctor, class:"btn btn-primary text-white" %>
          <%= link_to 'Make an appointment', new_appointment_path, class:"btn btn-primary text-white" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>