<section class="intro">
  <div class="d-flex align-items-center pt-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card" style="border-radius: 1rem;">
            <div class="card-body py-0 px-5 text-center">

              <div class="my-md-3 pb-2">
                  <% if @doctor.errors.any? %>
                    <div id="error_explanation">
                  <h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

                    <ul>
                      <% @doctor.errors.each do |error| %>
                        <li><%= error.full_message %></li>
                      <% end %>
                    </ul>
                     </div>
                <% end %>
                <h1 class="fw-bold mb-0">Log In</h1>

                <i class="fas fa-user-md fa-2x my-2"></i>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-outline mb-3">
                    <%= f.text_field :phone, autofocus: true, placeholder: "Phone", class:"form-control form-control-lg" %>
                                      
                  </div>

                  <div class="form-outline mb-3">
                    <%= f.password_field :password, placeholder: "Password", class:"form-control form-control-lg" %>
                    
                  </div>
                  <%= f.submit "Log in", class:"btn btn-primary btn-lg btn-rounded text-white px-5" %>
                  
                <% end %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
