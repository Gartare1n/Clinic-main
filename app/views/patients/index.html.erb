<div class="container mt-3">
  <h1>Patients</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.email %></td>
          <td><%= link_to 'Show', patient, class:"btn btn-primary text-white" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>